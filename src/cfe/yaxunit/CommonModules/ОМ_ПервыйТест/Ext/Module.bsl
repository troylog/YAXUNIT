    ЮТТесты
		.ДобавитьТест("СложениеБезПараметров")
		.ДобавитьТест("СложениеСПараметрами")
            .СПараметрами(2, 3, 5)
            .СПараметрами(2, -3, -1)
            .СПараметрами("2", "-3", "2-3")
            .СПараметрами("2", -3, "2-3")
		;

